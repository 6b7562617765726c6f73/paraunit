#!/usr/bin/env php
<?php

if (file_exists(__DIR__ . '/../../../../../autoload.php')) {
    require_once __DIR__ . '/../../../../../autoload.php';
} elseif (file_exists(__DIR__ . '/../../../vendor/autoload.php')) {
    // Required for local testing
    require_once __DIR__ . '/../../../vendor/autoload.php';
} else {
    throw new \Exception('Autoload not found');
}

if (!ini_get('date.timezone') && !date_default_timezone_get()) {
    date_default_timezone_set('UTC');
}

use Paraunit\Command\ParallelCommand;
use Paraunit\Configuration\Paraunit;
use Symfony\Component\Console\Application;

$container = Paraunit::buildContainer();
/** @var ParallelCommand $command */
$command = $container->get('paraunit.command.parallel_command');

// HOTFIX -- needed to fool the Symfony's WebTestCase
$_SERVER['argv'][0] = 'phpunit';

$application = new Application('Paraunit', Paraunit::PARAUNIT_VERSION);
$application->add($command);
$application->run();
